@model int

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="container mt-5">
    <div class="card mt-4 p-2">
        <div class="card-header">
            <h3>
                @localizer["Order Submitted Successfully!"]
            </h3>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <h5 class="text-center">
                    @localizer["Thank you for order!"]
                </h5>
                <h6 class="text-center">
                    @localizer["We have received your order and we will contact you in shortly!"]
                </h6>
                <hr />
                <footer class="blockquote-footer">
                    @localizer["Your order number:"]
                    <cite title="Source Title"><strong>@Model</strong></cite>
                </footer>
            </blockquote>
        </div>
    </div>
</div>