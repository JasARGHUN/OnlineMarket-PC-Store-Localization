@page
@model ExternalLoginModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Register"];
}

<div>
    <h1>@ViewData["Title"]</h1>
    <h4 id="external-login-title">
        @localizer["Associate your"] @Model.ProviderDisplayName @localizer["account"].
    </h4>
    <hr />

    <p id="external-login-description" class="text-info">
        @localizer["You've successfully authenticated.Please enter an email address for this site below and click the Register button to finish logging in."]
    </p>

    <div class="row">
        <div class="col-md-4">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>
                        @localizer["Email"]
                    </label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["Name"]
                    </label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["City"]
                    </label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["Address"]
                    </label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["State"]
                    </label>
                    <input asp-for="Input.State" class="form-control" />
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["PostalCode"]
                    </label>
                    <input asp-for="Input.PostalCode" class="form-control" />
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>
                        @localizer["PhoneNumber"]
                    </label>
                    <input asp-for="Input.PhoneNumber" placeholder="+770000000" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">
                    @localizer["Register"]
                </button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
